class Animal {
    void display() {
        System.out.println("Animal is eating.");
    }
}

class Dog extends Animal {
    void show() {
        System.out.println("Dog is barking.");
    }
}

public class SingleInheritance {
    public static void main(String[] args) {
        Dog dog = new Dog();
        dog.display();
        dog.show();
    }
}
